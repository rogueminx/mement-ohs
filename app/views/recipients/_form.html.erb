<%= render "layouts/errors", :object => @collection %>
<div class="form-box">
  <% if @collections.any? %>
  <% @collections.each do |collection| %>
  <button type="button" class="btn btn-collection">
    <%= link_to collection.name, new_collection_memento_path(collection) %>
  </button>
  <% end %>
  <% end %>
  <hr>
  <h4>Add a new person!</h4>
  <%= form_for [@collection] do |f| %>
  <div class="form_field">
    <%= f.label :name, "Enter their name" %>
    <br>
    <%= f.text_field :name %>
  </div>
  <div class="form_field">
    <%= f.label :relation, "Who are they (co-worker, friend, spouse)" %>
    <br>
    <%= f.text_field :relation %>
  </div>
  <div class="form_field">
    <%= f.label :email, "Enter their e-mail (optional for sending)" %>
    <br>
    <%= f.email_field :email %>
  </div>
  <%= f.submit "Create", class: 'form-button' %>
  <% end %>
</div>
