<div class="page-contents">
  <h2><%= @memento.title %> with <%= @recipient.name %></h2>
    <p><%= link_to "Edit", edit_recipient_memento_path(@recipient, @memento) %></p>
  <hr>
  <div class="memento-box">
    <div class="memento-photo">
      <%= image_tag @memento.image.url, class: 'large_memento_image' %>
    </div>
    <div class="memento-body">
      <p><%= @memento.body %></p>
    </div>
  </div>
</div>
