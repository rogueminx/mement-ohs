<%= render "layouts/errors", :object => @recipient %>
 <div class="form-box">
   <h2>Update Memento for <%= @recipient.name %></h2>

   <%= form_for [@recipient, @memento], url: recipient_memento_path(@recipient, @memento), html: { multipart: true } do |f| %>
   <div class="form_field">
     <%= f.label :title, "Title" %>
     <br>
     <%= f.text_field :title %>
   </div>
   <div class="form_field">
     <% if @memento.image %>
      <%= f.label :current_image %>
      <br>
      <%= image_tag @memento.image.url, class: 'small_memento_image' %>
      <% else %>
     <%= f.label :image %>
     <br>
     <% end %>
     <%= f.file_field :image %>
   </div>
   <div class="form_field">
     <%= f.label :body, "Body" %>
     <br>
     <%= f.text_area :body %>
   </div>
   <div class="form_field">
     <%= f.label :date %>
     <br>
     <%= f.date_field :time_to_send %>
   </div>
   <%= f.submit "Update Memento", class: 'form-button' %>
   <% end %>

 </div>
