<%= form_for @user, :url => collection_invite_user_path(@collection) do |f| %>
  <%= f.hidden_field :collection_id, :value => @collection.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit 'Invite Collaborator' %>
<% end %>
